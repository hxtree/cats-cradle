{
  "openapi": "3.0.0",
  "paths": {
    "/templates/user-account-created": {
      "post": {
        "operationId": "TemplateController_convert",
        "parameters": [
          {
            "name": "format",
            "required": true,
            "in": "query",
            "schema": { "enum": ["text", "html", "template"], "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/UserAccountCreatedDto"
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "" } }
      }
    },
    "/templates/user-forgotten-password-reset": {
      "post": {
        "operationId": "TemplateController_convertUserForgottenPasswordReset",
        "parameters": [
          {
            "name": "format",
            "required": true,
            "in": "query",
            "schema": { "enum": ["text", "html", "template"], "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/UserForgottenPasswordResetDto"
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "" } }
      }
    },
    "/requests": {
      "post": {
        "operationId": "MonitoringController_create",
        "parameters": [
          {
            "name": "template",
            "required": true,
            "in": "query",
            "schema": {
              "enum": ["user-account-created", "user-forgotten-password-reset"],
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/SendEmailRequestDto" }
              }
            }
          }
        },
        "responses": { "201": { "description": "" } }
      },
      "get": {
        "operationId": "MonitoringController_findAll",
        "parameters": [],
        "responses": { "200": { "description": "" } }
      }
    }
  },
  "info": {
    "title": "@cats-cradles/email-service",
    "description": "An API for the email service",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "schemas": {
      "UserAccountCreatedDto": {
        "type": "object",
        "properties": {
          "recipient": {
            "type": "string",
            "description": "The email receipent",
            "default": "jane.doe@example.com"
          },
          "firstName": {
            "type": "string",
            "description": "The first name of the receipent",
            "default": "Jane"
          }
        },
        "required": ["recipient", "firstName"]
      },
      "UserForgottenPasswordResetDto": {
        "type": "object",
        "properties": {
          "recipient": {
            "type": "string",
            "description": "The email of the receipent",
            "default": "jane.doe@example.com"
          },
          "username": {
            "type": "string",
            "description": "The username of the receipent",
            "default": "janedoe"
          },
          "link": {
            "type": "string",
            "description": "The link for the reset password",
            "default": "https://example.com/forgot-password-reset?token=abc123"
          }
        },
        "required": ["recipient", "username", "link"]
      },
      "SendEmailRequestDto": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "description": "Status of the send email request",
            "default": "OPEN"
          }
        },
        "required": ["status"]
      }
    }
  }
}
