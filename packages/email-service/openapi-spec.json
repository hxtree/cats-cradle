{
  "openapi": "3.0.0",
  "paths": {
    "/email-message/user-account-created": {
      "post": {
        "operationId": "EmailMessageController_convert",
        "parameters": [
          {
            "name": "format",
            "required": true,
            "in": "query",
            "schema": { "enum": ["text", "html", "template"], "type": "string" }
          },
          {
            "name": "send",
            "required": false,
            "in": "query",
            "schema": { "type": "boolean" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/UserAccountCreatedDto"
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "" } }
      }
    },
    "/email-message/user-forgotten-password-reset": {
      "post": {
        "operationId": "EmailMessageController_convertUserForgottenPasswordReset",
        "parameters": [
          {
            "name": "format",
            "required": true,
            "in": "query",
            "schema": { "enum": ["text", "html", "template"], "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/UserForgottenPasswordResetDto"
                }
              }
            }
          }
        },
        "responses": { "201": { "description": "" } }
      }
    },
    "/email-message/stats": {
      "get": {
        "operationId": "EmailMessageController_stats",
        "parameters": [],
        "responses": { "200": { "description": "" } }
      }
    }
  },
  "info": {
    "title": "@cats-cradles/email-service",
    "description": "An API for the email service",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "schemas": {
      "UserAccountCreatedDto": {
        "type": "object",
        "properties": {
          "recipient": {
            "type": "string",
            "description": "The email recipient",
            "default": "jane.doe@example.com"
          },
          "firstName": {
            "type": "string",
            "description": "The first name of the recipient",
            "default": "Jane"
          }
        },
        "required": ["recipient", "firstName"]
      },
      "UserForgottenPasswordResetDto": {
        "type": "object",
        "properties": {
          "recipient": {
            "type": "string",
            "description": "The email recipient",
            "default": "jane.doe@example.com"
          },
          "username": {
            "type": "string",
            "description": "The username of the recipient",
            "default": "jane.doe"
          },
          "link": {
            "type": "string",
            "description": "The link for the reset password",
            "default": "https://example.com/forgot-password-reset?token=abc123"
          }
        },
        "required": ["recipient", "username", "link"]
      }
    }
  }
}
