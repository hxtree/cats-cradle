{
  "openapi": "3.0.0",
  "paths": {
    "/dice-roll": {
      "post": {
        "operationId": "DiceRollController_create",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/QueryRollDto" }
            }
          }
        },
        "responses": { "201": { "description": "" } }
      }
    }
  },
  "info": {
    "title": "@cats-cradle/luck-by-dice",
    "description": "An API Simulating dice rolls that can be effected by luck from dice notation",
    "version": "1.0.3",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "securitySchemes": {
      "lambda": {
        "type": "apiKey",
        "in": "header",
        "name": "x-lambda-token",
        "description": "The API key for lambda request."
      }
    },
    "schemas": {
      "QueryRollDto": {
        "type": "object",
        "properties": {
          "notation": {
            "type": "string",
            "description": "Dice notation",
            "default": "1d6"
          },
          "luck": { "type": "number", "description": "Characters luck" },
          "iterations": {
            "type": "number",
            "description": "Amount of times to roll",
            "minimum": 1,
            "maximum": 100,
            "default": 1
          }
        },
        "required": ["notation", "luck", "iterations"]
      }
    }
  }
}
