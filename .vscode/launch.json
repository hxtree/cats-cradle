  "version": "2.0.0",
  "configurations": [
    {
      "name": "Rushx Test",
      "type": "node",
      "request": "launch",
      "cwd": "${fileDirname}",
      "runtimeExecutable": "rushx",
      "runtimeArgs": ["test"],
      "console": "integratedTerminal"
    },
    {
      "name": "NPM Test File",
      "type": "node",
      "request": "launch",
      "cwd": "${fileDirname}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["test", "-t", "${fileBasenameNoExtension}.test.ts"],
      "console": "integratedTerminal"
    }
  ]
}
