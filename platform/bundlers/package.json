{
  "name": "@cats-cradle/bundlers",
  "license": "MIT",
  "bin": {
    "nestjs-bundler": "./dist/bin-nestjs.js"
  },
  "main": "./dist/index.js",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hxtree/cats-cradle.git"
  },
  "bugs": {
    "url": "https://github.com/hxtree/cats-cradle/issues"
  },
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "build": "tsc",
    "build:all": "rush build -t .",
    "watch": "tsc -w",
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "eslint --format visualstudio \"./{stacks,src}/*.ts\"  --fix",
    "lint:ci": "eslint --format visualstudio \"./{stacks,src}/*.ts\"  --fix-dry-run",
    "depcheck": "npx depcheck"
  },
  "keywords": [
    "bundle",
    "nestjs",
    "lambda",
    "esbuild"
  ],
  "dependencies": {
    "@cats-cradle/base-nodejs": "workspace:*",
    "@anatine/esbuild-decorators": "~0.2.19",
    "commander": "~10.0.0",
    "esbuild": "~0.17.5"
  },
  "devDependencies": {
    "@types/jest": "29.5.1",
    "@types/node": "20.3.1",
    "jest": "29.5.0",
    "ts-jest": "29.1.0",
    "typescript": "5.1.3",
    "ts-node": "10.9.1",
    "eslint": "8.43.0",
    "@cats-cradle/eslint-config": "1.0.6"
  }
}
