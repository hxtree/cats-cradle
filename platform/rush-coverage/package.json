{
  "name": "@org-cicd/rush-coverage",
  "bin": {
    "app": "./dist/src/app.js"
  },
  "main": "index.js",
  "version": "0.0.1",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "build": "tsc",
    "build:all": "rush build -t .",
    "watch": "tsc -w",
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "eslint --format visualstudio \"./{stacks,src}/*.ts\" --fix",
    "lint:ci": "eslint --format visualstudio \"./{stacks,src}/*.ts\" --fix-dry-run",
    "depcheck": "npx depcheck"
  },
  "dependencies": {
    "@org-rig/base-nodejs": "workspace:*",
    "istanbul-lib-coverage": "~3.2.0",
    "istanbul-lib-report": "~3.0.0",
    "istanbul-reports": "~3.1.5",
    "@types/istanbul-reports": "~3.0.1",
    "@microsoft/rush-lib": "~5.89.1"
  },
  "devDependencies": {
    "@types/jest": "28.1.8",
    "@types/node": "^16.0.0",
    "jest": "28.1.3",
    "ts-jest": "28.0.8",
    "typescript": "4.9.4",
    "ts-node": "10.9.1",
    "esbuild": "~0.15.12",
    "@types/uuid": "~8.3.4",
    "eslint": "8.26.0",
    "@org-platform/eslint-config": "workspace:*",
    "@types/json-schema": "~7.0.11"
  }
}
