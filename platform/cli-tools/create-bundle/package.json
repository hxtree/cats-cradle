{
  "name": "@cats-cradle/create-bundle",
  "license": "MIT",
  "bin": {
    "create-bundle": "bin/create-bundle"
  },
  "main": "./dist/index.js",
  "version": "1.0.14",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hxtree/cats-cradle.git"
  },
  "bugs": {
    "url": "https://github.com/hxtree/cats-cradle/issues"
  },
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "build": "tsc",
    "build:all": "rush build -t .",
    "watch": "tsc -w",
    "test": "jest --runInBand",
    "test:cov": "jest --coverage --runInBand",
    "lint": "eslint --format visualstudio \"./{stacks,src}/*.ts\"  --fix",
    "lint:ci": "eslint --format visualstudio \"./{stacks,src}/*.ts\"  --fix-dry-run",
    "depcheck": "npx depcheck"
  },
  "keywords": [
    "bundle",
    "nestjs",
    "lambda",
    "esbuild"
  ],
  "dependencies": {
    "@cats-cradle/base-nodejs": "workspace:*",
    "@anatine/esbuild-decorators": "~0.2.19",
    "commander": "~10.0.0",
    "esbuild": "~0.20.1",
    "chokidar": "~3.5.3"
  },
  "devDependencies": {
    "@types/jest": "29.5.12",
    "@types/node": "20.11.25",
    "jest": "29.7.0",
    "ts-jest": "29.1.2",
    "typescript": "5.3.3",
    "ts-node": "10.9.2",
    "eslint": "8.57.0",
    "@cats-cradle/eslint-config": "1.0.11",
    "@cats-cradle/base-nodejs": "workspace:*"
  }
}
