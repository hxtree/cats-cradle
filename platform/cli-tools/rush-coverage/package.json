{
  "name": "@cats-cradle/rush-coverage",
  "license": "MIT",
  "bin": "./dist/index.js",
  "main": "index.js",
  "version": "1.2.8",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hxtree/cats-cradle.git"
  },
  "bugs": {
    "url": "https://github.com/hxtree/cats-cradle/issues"
  },
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "build": "tsc",
    "build:all": "rush build -t .",
    "watch": "tsc -w",
    "test": "jest --runInBand",
    "test:cov": "jest --coverage --runInBand",
    "lint": "eslint --format visualstudio \"./{stacks,src}/*.ts\"  --fix",
    "lint:ci": "eslint --format visualstudio \"./{stacks,src}/*.ts\"  --fix-dry-run",
    "depcheck": "npx depcheck"
  },
  "keywords": [
    "rushjs",
    "code coverage",
    "monorepo",
    "rush"
  ],
  "dependencies": {
    "@cats-cradle/base-nodejs": "workspace:*",
    "istanbul-lib-coverage": "~3.2.0",
    "istanbul-lib-report": "~3.0.0",
    "istanbul-reports": "~3.1.5",
    "@types/istanbul-reports": "~3.0.1",
    "@microsoft/rush-lib": "5.109.2"
  },
  "devDependencies": {
    "@types/jest": "29.5.11",
    "@types/node": "20.9.0",
    "jest": "29.7.0",
    "ts-jest": "29.1.1",
    "typescript": "5.1.3",
    "ts-node": "10.9.2",
    "eslint": "8.52.0",
    "@cats-cradle/eslint-config": "1.0.8"
  }
}
